<style>
    footer {
        margin-top: var(--space-32);
        padding: var(--space-16) var(--space-12) 0;
        position: relative;
        overflow: hidden;
    }

    footer::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent 0%,
            rgba(var(--accent-primary-rgb), 0.3) 20%,
            var(--accent-primary) 50%,
            rgba(var(--accent-primary-rgb), 0.3) 80%,
            transparent 100%
        );
    }

    .content {
        display: grid;
        grid-template-columns: repeat(auto-fit, 300px);
        align-items: center;
        justify-content: space-between;
        gap: var(--space-6);
    }

    .section {
        display: flex;
        flex-direction: column;
        height: 100%;
        gap: var(--space-4);
    }
    img {
        max-width: min(100%, 200px);
        height: auto;
    }
    h3 {
        font-size: var(--font-size-xl);
    }
    ul {
        display: flex;
        flex-direction: column;
        gap: var(--space-3);
        list-style: none;
        margin: 0;
        padding: 0;
    }
    a {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        color: light-dark(rgba(0, 0, 0, 0.7), rgba(255, 255, 255, 0.7));
        text-decoration: none;
        transition: color 0.3s ease;
    }
    a:hover {
        color: var(--color-white);
    }
    a i {
        color: var(--color-accent);
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: var(--space-12);
        padding: var(--space-6) 0;
        border-top: 1px solid var(--color-gray);
    }
    .footer-bottom p {
        color: light-dark(rgba(0, 0, 0, 0.7), rgba(255, 255, 255, 0.7));
    }
    .footer-bottom ul {
        flex-direction: row;
        gap: var(--space-12);
    }

    @media (max-width: 768px) {
        footer {
            padding: var(--space-10) var(--space-8) 0;
        }

        .content {
            grid-template-columns: 1fr;
            gap: var(--space-10);
        }

        .footer-bottom {
            flex-direction: column-reverse;
            gap: var(--space-4);
            text-align: center;
        }
        .footer-bottom ul {
            width: 100%;
            gap: 0;
            justify-content: space-around;
        }
    }
</style>
