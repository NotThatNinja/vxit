---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
---

<header>
    <a href="/" class="logo">
        <div class="logo-placeholder">LOGO</div>
    </a>

    <nav>
        <ul>
            <li><a href="/vxit/">Home</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle">
                    Services
                    <i class="fas fa-chevron-down"></i>
                </a>
                <div class="dropdown-menu">
                    <a href="/vxit/services/website-development">
                        Website Development
                    </a>
                    <a href="/vxit/services/ai-integration">AI Integration</a>
                    <a href="/vxit/services/ecommerce-solutions">
                        Ecommerce Solutions
                    </a>
                    <a href="/vxit/services/seo-optimization">
                        SEO Optimization
                    </a>
                </div>
            </li>
            <li><a href="/vxit/portfolio">Portfolio</a></li>
            <li><a href="/vxit/contact">Contact Us</a></li>
        </ul>
    </nav>

    <button id="navToggle" class="hamburger" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
    </button>
</header>

<style>
    header {
        z-index: 100;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        width: calc(100% - var(--space-4) * 2);
        height: calc(var(--header-height) - var(--space-3) * 2);
        justify-content: space-between;
        align-items: center;
        padding: var(--space-3) var(--space-4);
    }

    .logo {
        display: none;
        animation: 1.5s ease-in-out 1 slideFromLeft;
        transition: scale 0.3s ease;
    }
    .logo:hover {
        scale: 1.05;
    }
    .logo img {
        width: 75px;
        height: auto;
    }

    nav {
        display: flex;
        margin: auto;
        padding: var(--space-4) var(--space-10);
        background: rgba(10, 10, 10, 0.6);
        backdrop-filter: blur(24px);
        border: 1px solid var(--color-gray);
        border-radius: var(--radius-full);
        animation: 1.5s ease-in-out 1 slideFromTop;
        transition: transform 0.7s ease;
    }
    nav.active {
        transform: translateY(0);
    }
    nav ul {
        display: flex;
        gap: var(--space-12);
        margin: 0;
        padding: 0;
        list-style: none;
    }
    nav ul li a {
        text-decoration: none;
        color: var(--color-white);
        font-size: var(--font-size-base);
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }
    nav ul li a:hover {
        color: var(--color-accent);
    }

    .hamburger {
        position: fixed;
        top: 25px;
        right: 25px;
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 6px;
        background: transparent;
        border: none;
        cursor: pointer;
    }
    .hamburger span {
        height: 2px;
        width: 25px;
        background-color: var(--color-white);
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
    }
    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translateY(11px);
    }
    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }
    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translateY(-11px);
    }

    /* Dropdown Styles */
    .dropdown {
        position: relative;
    }
    .dropdown-toggle i {
        font-size: var(--font-size-sm);
        transition: transform 0.3s ease;
    }
    .dropdown:hover .dropdown-toggle i,
    .dropdown.mobile-active .dropdown-toggle i {
        transform: rotate(180deg);
    }
    .dropdown:hover .dropdown-menu {
        opacity: 1;
        visibility: visible;
        transform: translateX(-50%) translateY(0);
    }

    .dropdown-menu {
        position: absolute;
        top: calc(100% + var(--space-4));
        left: 50%;
        background: rgba(10, 10, 10, 0.5);
        backdrop-filter: blur(24px);
        border: 1px solid var(--color-gray);
        border-radius: var(--radius-xl);
        padding: var(--space-4);
        min-width: 200px;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
        transform: translateX(-50%) translateY(-10px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }
    .dropdown-menu a {
        display: block;
        padding: var(--space-3) var(--space-4);
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        border-radius: var(--radius-lg);
        transition: all 0.3s ease;
        font-size: var(--font-size-sm);
        position: relative;
        overflow: hidden;
    }
    .dropdown-menu a:hover {
        color: var(--color-white);
        background: rgba(var(--color-accent-rgb), 0.1);
    }

    @keyframes slideFromTop {
        from {
            transform: translateY(-150%);
        }
        to {
            transform: translateY(0);
        }
    }

    @keyframes slideFromLeft {
        from {
            transform: translateX(-300%);
        }
        to {
            transform: translateX(0);
        }
    }

    @media (max-width: 768px) {
        nav {
            transform: translateY(-100%);
            position: fixed;
            justify-content: center;
            align-items: center;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 0;
            padding: 0;
            animation: none;
        }
        nav ul {
            flex-direction: column;
            align-items: center;
            gap: var(--space-8);
        }
        nav ul li a {
            font-size: var(--font-size-4xl);
        }

        .hamburger {
            display: flex;
        }

        /* Mobile dropdown adjustments */
        .dropdown {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .dropdown:hover .dropdown-menu {
            transform: none;
        }
        .dropdown-menu {
            position: static;
            transform: none;
            background: transparent;
            min-width: auto;
            width: auto;
            opacity: 1;
            max-height: 0;
            overflow: hidden;
            transition: all 0.4s ease;
            box-shadow: none;
            visibility: visible;
            backdrop-filter: none;
            border: none;
            padding: 0;
            margin-top: 0;
        }
        .dropdown-menu a {
            font-size: var(--font-size-3xl) !important;
            text-align: center;
        }
        .dropdown-menu a:hover {
            background: transparent;
            color: var(--color-white);
        }

        .dropdown.mobile-active .dropdown-menu {
            max-height: 300px;
            margin-top: var(--space-4);
            padding: var(--space-4);
        }

        @keyframes slideFromTop {
            from {
                transform: translateY(-100%);
            }
            to {
                transform: translateY(0);
            }
        }
    }
</style>

<script>
    // Toggle navigation for mobile
    const nav = document.querySelector("nav");
    const navToggle = document.querySelector("#navToggle");

    navToggle?.addEventListener("click", () => {
        navToggle.classList.toggle("active");
        nav?.classList.toggle("active");
    });

    // Mobile dropdown functionality
    const dropdownToggle = document.querySelector(".dropdown-toggle");
    const dropdown = document.querySelector(".dropdown");

    // Handle mobile dropdown clicks
    dropdownToggle?.addEventListener("click", (e) => {
        // Only prevent default and handle click on mobile
        if (window.innerWidth <= 768) {
            e.preventDefault();
            dropdown?.classList.toggle("mobile-active");
        }
    });

    // Reset mobile dropdown state on window resize
    window.addEventListener("resize", () => {
        if (window.innerWidth > 768) {
            dropdown?.classList.remove("mobile-active");
        }
    });

    // Close mobile nav when clicking dropdown links
    const dropdownLinks = document.querySelectorAll(".dropdown-menu a");
    dropdownLinks.forEach((link) => {
        link.addEventListener("click", () => {
            if (window.innerWidth <= 768) {
                navToggle?.classList.remove("active");
                nav?.classList.remove("active");
                dropdown?.classList.remove("mobile-active");
            }
        });
    });
</script>
