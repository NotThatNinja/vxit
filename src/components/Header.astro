---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
---

<header>
    <a href="/" class="logo">
        <Image src={logo} alt="VXIT" />
    </a>

    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li class="dropdown">
                <a href="#">
                    Services
                    <i class="fas fa-chevron-down"></i>
                </a>
                <ul class="dropdown-content">
                    <li>
                        <a href="/services/website-development">
                            Website Development
                        </a>
                    </li>
                    <li>
                        <a href="/services/ai-integration">AI Integration</a>
                    </li>
                    <li>
                        <a href="/services/ecommerce-solutions">
                            Ecommerce Solutions
                        </a>
                    </li>
                    <li>
                        <a href="/services/seo-optimization">
                            SEO Optimization
                        </a>
                    </li>
                    <li>
                        <a href="/services/maintenance">
                            Maintenance & Additional Services
                        </a>
                    </li>
                </ul>
            </li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact Us</a></li>
        </ul>
    </nav>

    <div class="nav-actions">
        <div class="language-selector dropdown">
            <a href="#">
                EN
                <i class="fas fa-chevron-down"></i>
            </a>
            <ul class="dropdown-content">
                <li><a href="/it">IT</a></li>
                <li><a href="/et">ET</a></li>
                <li><a href="/es">ES</a></li>
                <li><a href="/fr">FR</a></li>
            </ul>
        </div>

        <div class="theme-toggle">
            <button
                type="button"
                id="lightThemeButton"
                aria-label="Switch to light theme"
            >
                <i class="fas fa-sun"></i>
            </button>
            <button
                type="button"
                id="darkThemeButton"
                aria-label="Switch to dark theme"
            >
                <i class="fas fa-moon"></i>
            </button>
        </div>
    </div>

    <button id="navToggle" class="hamburger" aria-label="Toggle navigation">
        <span></span>
        <span></span>
        <span></span>
    </button>
</header>

<style>
    header {
        z-index: 100;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        width: calc(100% - var(--space-4) * 2);
        height: calc(var(--header-height) - var(--space-3) * 2);
        justify-content: space-between;
        align-items: center;
        padding: var(--space-3) var(--space-4);
    }

    .logo {
        width: 50px;
        height: 50px;
        animation: 1.5s ease-in-out 1 slideFromLeft;
        transition: scale 0.3s ease;
    }
    .logo:hover {
        scale: 1.1;
    }
    .logo img {
        width: 100%;
        height: auto;
    }

    nav {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        padding: var(--space-4) var(--space-10);
        background: light-dark(rgba(255, 255, 255, 0.6), rgba(10, 10, 10, 0.6));
        -webkit-backdrop-filter: blur(24px);
        backdrop-filter: blur(24px);
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-full);
        animation: 1.5s ease-in-out 1 slideFromTop;
        transition: transform 0.7s ease;
    }
    nav.active {
        transform: translateY(0);
    }
    .nav-actions.active {
        transform: translateX(0);
    }
    nav > ul {
        display: flex;
        gap: var(--space-12);
        margin: 0;
        padding: 0;
        list-style: none;
    }
    nav > ul > li > a {
        text-decoration: none;
        color: var(--color-primary);
        font-size: var(--font-size-base);
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }
    nav > ul > li > a i {
        font-size: var(--font-size-sm);
        transition: transform 0.3s ease;
    }
    nav > ul > li > a:hover {
        color: var(--accent-primary);
    }

    .nav-actions {
        display: flex;
        align-items: center;
        gap: var(--space-4);
        animation: 1.5s ease-in-out 1 slideFromRight;
    }

    .dropdown {
        position: relative;
    }
    .dropdown-content {
        display: flex;
        flex-direction: column;
        gap: var(--space-6);
        position: absolute;
        top: calc(50% + var(--space-8));
        left: calc(-1 * var(--space-8));
        min-width: 200px;
        margin: 0;
        padding: var(--space-6);
        background: light-dark(rgba(255, 255, 255, 0.6), rgba(10, 10, 10, 0.6));
        -webkit-backdrop-filter: blur(24px);
        backdrop-filter: blur(24px);
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-xl);
        list-style: none;
        opacity: 0;
        transition:
            opacity 0.4s ease,
            visibility 0.4s ease;
        visibility: hidden;
    }
    .dropdown-content li a {
        display: flex;
        text-decoration: none;
        color: var(--color-primary);
        font-size: var(--font-size-base);
        transition: color 0.3s ease;
    }
    .dropdown-content li a:hover {
        color: var(--accent-primary);
    }
    .dropdown:hover .dropdown-content,
    .dropdown-content:hover,
    .dropdown.active .dropdown-content {
        opacity: 1;
        visibility: visible;
    }
    .dropdown:hover a i,
    .dropdown.active a i {
        transform: rotate(180deg);
    }

    .hamburger {
        position: fixed;
        top: 25px;
        right: 25px;
        display: none;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 6px;
        background: transparent;
        border: none;
        cursor: pointer;
    }
    .hamburger span {
        height: 2px;
        width: 25px;
        background-color: var(--color-primary);
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
    }
    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translateY(11px);
    }
    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }
    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translateY(-11px);
    }

    /* Language Selector */
    .language-selector {
        display: flex;
        align-items: center;
        gap: var(--space-4);
        padding: var(--space-3) var(--space-4);
        background: light-dark(rgba(255, 255, 255, 0.6), rgba(10, 10, 10, 0.6));
        -webkit-backdrop-filter: blur(24px);
        backdrop-filter: blur(24px);
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-full);
        position: relative;
    }
    .language-selector .dropdown-content {
        min-width: 0;
        left: var(--space-1);
    }
    .language-selector a {
        display: flex;
        gap: var(--space-2);
        align-items: center;
        text-decoration: none;
        color: var(--color-primary);
        font-size: var(--font-size-base);
        transition: color 0.3s ease;
    }
    .language-selector:hover .dropdown-menu {
        opacity: 1;
        visibility: visible;
        transform: translateX(-50%) translateY(0);
    }
    .language-selector .dropdown-toggle i {
        font-size: var(--font-size-sm);
        transition: transform 0.3s ease;
    }
    .language-selector:hover .dropdown-toggle i {
        transform: rotate(180deg);
    }

    /* Theme Toggle */
    .theme-toggle {
        display: flex;
        gap: var(--space-4);
        padding: var(--space-3) var(--space-4);
        background: light-dark(rgba(255, 255, 255, 0.6), rgba(10, 10, 10, 0.6));
        -webkit-backdrop-filter: blur(24px);
        backdrop-filter: blur(24px);
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-full);
    }
    .theme-toggle button {
        background: transparent;
        border: none;
        cursor: pointer;
        color: var(--color-primary);
        font-size: var(--font-size-lg);
        transition: color 0.3s ease;
    }
    .theme-toggle button:hover {
        color: light-dark(rgba(0, 0, 0, 0.5), rgba(255, 255, 255, 0.5));
    }
    .theme-toggle button.active {
        color: var(--accent-primary);
    }

    @keyframes slideFromTop {
        from {
            transform: translate(-50%, -150%);
        }
        to {
            transform: translate(-50%, 0);
        }
    }

    @keyframes slideFromLeft {
        from {
            transform: translateX(-300%);
        }
        to {
            transform: translateX(0);
        }
    }

    @keyframes slideFromRight {
        from {
            transform: translateX(300%);
        }
        to {
            transform: translateX(0);
        }
    }

    @media (max-width: 768px) {
        nav {
            transform: translateY(-100%);
            position: fixed;
            justify-content: center;
            align-items: center;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 0;
            padding: 0;
            animation: none;
        }
        nav > ul {
            flex-direction: column;
            align-items: center;
            gap: var(--space-8);
        }
        nav > ul > li > a {
            justify-content: center;
            font-size: var(--font-size-4xl);
        }

        .hamburger {
            display: flex;
        }

        .nav-actions {
            display: flex;
            position: fixed;
            top: 17px;
            left: 10px;
            flex-direction: row-reverse;
            transform: translateX(-150%);
            animation: none;
            transition: transform 0.7s ease;
        }

        nav .dropdown {
            position: static;
        }
        nav .dropdown-content {
            display: none;
            position: static;
            gap: var(--space-4);
            background: transparent;
            -webkit-backdrop-filter: none;
            backdrop-filter: none;
            border: none;
            opacity: 1;
            visibility: visible;
        }
        nav .dropdown-content li a {
            font-size: var(--font-size-2xl);
        }
        nav .dropdown.active .dropdown-content {
            display: flex;
        }

        .language-selector .dropdown-content {
            background: light-dark(rgb(255, 255, 255), rgb(10, 10, 10));
        }

        @keyframes slideFromTop {
            from {
                transform: translate(-50%, -100%);
            }
            to {
                transform: translate(-50%, 0);
            }
        }
    }
</style>

<script>
    // Toggle navigation for mobile
    const nav = document.querySelector("nav");
    const navToggle = document.querySelector("#navToggle");
    const navActions = document.querySelector(".nav-actions");
    const languageSelector = document.querySelector(".language-selector");

    navToggle?.addEventListener("click", () => {
        navToggle.classList.toggle("active");
        nav?.classList.toggle("active");
        navActions?.classList.toggle("active");
        languageSelector?.classList.remove("active");
    });

    // Mobile dropdown
    const dropdown = document.querySelector("nav .dropdown");
    const toggle = dropdown?.querySelector("a");
    toggle?.addEventListener("click", (e) => {
        e.preventDefault();
        dropdown?.classList.toggle("active");
    });

    // Mobile language selector
    languageSelector?.addEventListener("click", (e) => {
        languageSelector.classList.toggle("active");
    });

    // Theme toggle functionality
    const lightThemeButton = document.querySelector("#lightThemeButton");
    const darkThemeButton = document.querySelector("#darkThemeButton");

    lightThemeButton?.addEventListener("click", () => {
        document.documentElement.setAttribute("data-theme", "light");
        localStorage.setItem("theme", "light");
        lightThemeButton?.classList.add("active");
        darkThemeButton?.classList.remove("active");
    });
    darkThemeButton?.addEventListener("click", () => {
        document.documentElement.setAttribute("data-theme", "dark");
        localStorage.setItem("theme", "dark");
        darkThemeButton?.classList.add("active");
        lightThemeButton?.classList.remove("active");
    });

    // Set initial theme based on localStorage
    const initialTheme = localStorage.getItem("theme") || "dark";
    if (initialTheme === "light") {
        lightThemeButton?.classList.add("active");
    } else {
        darkThemeButton?.classList.add("active");
    }
</script>
