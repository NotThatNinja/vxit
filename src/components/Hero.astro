---
const { title, subtitle, cta } = Astro.props;
---

<section>
    <div class="overlay"></div>

    <video loop muted autoplay playsinline poster="/vxit/poster.jpg">
        <source src="/vxit/hero.mp4" type="video/mp4" />
    </video>
    <div class="hero-content">
        <h1>
            {
                title.split(" ").map((word, i) => (
                    <span class="hero-word">
                        {word.split("").map((char, j) => (
                            <span
                                data-nth={
                                    i * title.split(" ")[0].length + j + 1
                                }
                                class="hero-char"
                            >
                                {char}
                            </span>
                        ))}
                        &nbsp;
                    </span>
                ))
            }
        </h1>
        <p>{subtitle}</p>
        {
            cta && (
                <a href="/vxit/contact" class="cta-button">
                    Contact Us
                    <i class="fa-solid fa-arrow-right" />
                </a>
            )
        }
    </div>
</section>

<style>
    section {
        position: relative;
        display: flex;
        width: calc(100% - 2 * var(--space-6));
        height: 100vh;
        padding: 0 var(--space-6);
        justify-content: center;
        align-items: center;
        color: var(--color-white);
    }

    video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .overlay {
        z-index: 10;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
    }

    .hero-content {
        z-index: 20;
        display: flex;
        flex-direction: column;
        gap: var(--space-8);
        justify-content: center;
        align-items: center;
    }

    h1 {
        display: inline-flex;
        flex-wrap: wrap;
        justify-content: center;
        font-size: var(--font-size-hero);
        font-weight: var(--font-weight-bold);
        text-align: center;
    }
    .hero-word {
        display: inline-flex;
        flex-wrap: wrap;
    }
    .hero-char {
        filter: blur(100px);
        animation: 1s linear 1 blur-animation;
        animation-fill-mode: forwards;
    }
    .hero-char[data-nth="1"] {
        animation-delay: 0s;
    }
    .hero-char[data-nth="2"] {
        animation-delay: 0.05s;
    }
    .hero-char[data-nth="3"] {
        animation-delay: 0.1s;
    }
    .hero-char[data-nth="4"] {
        animation-delay: 0.15s;
    }
    .hero-char[data-nth="5"] {
        animation-delay: 0.2s;
    }
    .hero-char[data-nth="6"] {
        animation-delay: 0.25s;
    }
    .hero-char[data-nth="7"] {
        animation-delay: 0.3s;
    }
    .hero-char[data-nth="8"] {
        animation-delay: 0.35s;
    }
    .hero-char[data-nth="9"] {
        animation-delay: 0.4s;
    }
    .hero-char[data-nth="10"] {
        animation-delay: 0.45s;
    }
    .hero-char[data-nth="11"] {
        animation-delay: 0.5s;
    }
    .hero-char[data-nth="12"] {
        animation-delay: 0.55s;
    }
    .hero-char[data-nth="13"] {
        animation-delay: 0.6s;
    }
    .hero-char[data-nth="14"] {
        animation-delay: 0.65s;
    }
    .hero-char[data-nth="15"] {
        animation-delay: 0.7s;
    }
    .hero-char[data-nth="16"] {
        animation-delay: 0.75s;
    }
    .hero-char[data-nth="17"] {
        animation-delay: 0.8s;
    }
    .hero-char[data-nth="18"] {
        animation-delay: 0.85s;
    }
    .hero-char[data-nth="19"] {
        animation-delay: 0.9s;
    }

    p {
        text-align: center;
        max-width: 750px;
        font-size: var(--font-size-2xl);
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-3) var(--space-6);
        border: 1px solid var(--color-accent);
        border-radius: var(--radius-full);
        box-shadow: var(--shadow-base);
        background: var(--color-black);
        color: var(--color-white);
        font-size: var(--font-size-xl);
        text-decoration: none;
        transition: box-shadow 0.3s ease;
    }
    .cta-button:hover {
        box-shadow: var(--shadow-hover);
    }

    @keyframes blur-animation {
        0% {
            filter: blur(100px);
        }
        50% {
            filter: blur(50px);
        }
        75% {
            filter: blur(10px);
        }
        100% {
            filter: blur(0);
            background: linear-gradient(
                to bottom,
                var(--color-accent),
                var(--color-white)
            );
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    }
</style>
