---
import { getRelativeLocaleUrl } from "astro:i18n";
const locale = Astro.url.pathname.split("/")[1] || "en";

const { title, subtitle, cta } = Astro.props;
---

<section>
    <div class="overlay"></div>

    <video id="hero-video" loop muted autoplay playsinline poster="/poster.jpg">
        <source id="video-source" src="/hero-light.mp4" type="video/mp4" />
    </video>
    <div class="hero-content">
        <h1>
            {
                title.split(" ").map((word, i) => (
                    <span class="hero-word">
                        {word.split("").map((char, j) => (
                            <span
                                style={`animation-delay: ${i * title.split(" ")[0].length * 0.05 + j * 0.05}s`}
                                class="hero-char"
                            >
                                {char}
                            </span>
                        ))}
                        &nbsp;
                    </span>
                ))
            }
        </h1>
        <p>
            {
                subtitle.split(" ").map((word, i) => (
                    <span
                        style={`animation-delay: ${i * 0.05}s`}
                        class="sub-char"
                    >
                        {word}
                    </span>
                ))
            }
        </p>
        {
            cta && (
                <a
                    href={getRelativeLocaleUrl(locale, "/contact")}
                    class="cta-button"
                >
                    Contact Us
                    <i class="fa-solid fa-arrow-right" />
                </a>
            )
        }
    </div>
</section>

<style>
    section {
        position: relative;
        display: flex;
        width: calc(100% - 2 * var(--space-6));
        height: 100vh;
        padding: 0 var(--space-6);
        justify-content: center;
        align-items: center;
        color: var(--color-primary);
    }

    video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .overlay {
        z-index: 10;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            to bottom,
            light-dark(rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0.3)),
            light-dark(rgba(255, 255, 255, 0.3), rgba(0, 0, 0, 0.5)) 75%,
            light-dark(rgba(var(--color-secondary-rgb), 1), rgba(0, 0, 0, 1))
        );
    }

    .hero-content {
        z-index: 20;
        display: flex;
        flex-direction: column;
        gap: var(--space-8);
        justify-content: center;
        align-items: center;
    }

    h1 {
        display: inline-flex;
        flex-wrap: wrap;
        justify-content: center;
        font-size: var(--font-size-hero);
        font-weight: var(--font-weight-bold);
        text-align: center;
    }
    .hero-word {
        display: inline-flex;
        flex-wrap: wrap;
    }
    .hero-char,
    .sub-char {
        filter: blur(100px);
        animation: 1s linear 1 hero-animation;
        animation-fill-mode: forwards;
    }
    .sub-char {
        animation: 1s linear 1 sub-animation;
        animation-fill-mode: forwards;
    }

    p {
        text-align: center;
        max-width: 750px;
        font-size: var(--font-size-2xl);
        animation: 1.5s linear 1 opacityAnimation;
        animation-fill-mode: forwards;
        color: light-dark(var(--color-secondary), var(--color-primary));
    }

    .cta-button {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-3) var(--space-6);
        border: 1px solid var(--accent-primary);
        border-radius: var(--radius-full);
        box-shadow: var(--shadow-base);
        background: var(--color-secondary);
        color: var(--color-primary);
        font-size: var(--font-size-xl);
        text-decoration: none;
        transition: box-shadow 0.3s ease;
    }
    .cta-button:hover {
        box-shadow: var(--shadow-hover);
    }

    @keyframes hero-animation {
        0% {
            filter: blur(100px);
        }
        50% {
            filter: blur(50px);
        }
        75% {
            filter: blur(10px);
        }
        100% {
            filter: blur(0);
            background: linear-gradient(
                to bottom,
                var(--accent-primary),
                light-dark(var(--color-secondary), var(--color-primary))
            );
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    }

    @keyframes sub-animation {
        0% {
            filter: blur(100px);
        }
        50% {
            filter: blur(50px);
        }
        75% {
            filter: blur(10px);
        }
        100% {
            filter: blur(0);
        }
    }
</style>

<script>
    // Function to update video source and poster based on theme
    function updateVideoSource() {
        const initialTheme = localStorage.getItem("theme") || "dark";
        const videoSource = document.getElementById(
            "video-source",
        ) as HTMLSourceElement;
        const video = document.getElementById("hero-video") as HTMLVideoElement;

        if (videoSource && video) {
            const videoSrc =
                initialTheme === "dark" ? "/hero.mp4" : "/hero-light.mp4";
            const posterSrc =
                initialTheme === "dark" ? "/poster.jpg" : "/poster-light.jpg";
            videoSource.src = videoSrc;
            video.poster = posterSrc;
            video.load(); // Reload the video with new source and poster
        }
    }

    updateVideoSource();

    const observer = new MutationObserver((mutations) => {
        for (const mutation of mutations) {
            if (
                mutation.type === "attributes" &&
                mutation.attributeName === "data-theme"
            ) {
                updateVideoSource();
            }
        }
    });

    observer.observe(document.documentElement, { attributes: true });

    // Also listen for custom theme change events
    document.addEventListener("themeChanged", updateVideoSource);
</script>
