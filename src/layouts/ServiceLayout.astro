---
import { getRelativeLocaleUrl } from "astro:i18n";
const locale = Astro.url.pathname.split("/")[1] || "en";

import { translations } from "../i18n/servicelayout.js";
const t = translations[locale];

import Layout from "./Layout.astro";
import Hero from "../components/Hero.astro";
import SectionTitle from "../components/SectionTitle.astro";

const {
    title,
    hero,
    individualPlan,
    businessPlan,
    benefits,
    process,
    additionalServices,
} = Astro.props;
---

<Layout title={title}>
    <main>
        <Hero title={hero.title} subtitle={hero.subtitle} />

        <!-- Benefits Section -->
        <section class="benefits">
            <SectionTitle>{t.whyChooseUs}</SectionTitle>
            <div class="benefits-grid" data-aos="fade-up">
                {
                    benefits.map((benefit) => (
                        <div class="benefit-card">
                            <div class="benefit-icon">
                                <i class={benefit.icon} />
                            </div>
                            <h3>{benefit.title}</h3>
                            <p>{benefit.description}</p>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Pricing Toggle Section -->
        <section>
            <SectionTitle>{t.ourPlans}</SectionTitle>
            <div class="plans">
                <div class="toggle-plans">
                    <button id="individualPlansToggle">{t.individual}</button>
                    <button class="active" id="businessPlansToggle"
                        >{t.business}</button
                    >
                </div>

                <div class="plan-cards" data-aos="zoom-in">
                    <div class="plan-card" id="individualPlanCard">
                        <div class="card-header">
                            <h3>{individualPlan.name}</h3>
                            <p class="price">{individualPlan.price}</p>
                            <p>{individualPlan.description}</p>
                        </div>
                        <ul>
                            {
                                individualPlan.features.map((feature) => (
                                    <li>
                                        <i class="fas fa-check" /> {feature}
                                    </li>
                                ))
                            }
                        </ul>
                        <p class="timeline">
                            <i class="fas fa-clock"></i>
                            {individualPlan.timeline}
                        </p>
                        <a
                            class="active"
                            href={getRelativeLocaleUrl(locale, "/contact")}
                        >
                            {t.contactUs}
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>

                    <div class="plan-card active" id="businessPlanCard">
                        <div class="card-header">
                            <h3>{businessPlan.name}</h3>
                            <p class="price">{businessPlan.price}</p>
                            <p>{businessPlan.description}</p>
                        </div>
                        <ul>
                            {
                                businessPlan.features.map((feature) => (
                                    <li>
                                        <i class="fas fa-check" /> {feature}
                                    </li>
                                ))
                            }
                        </ul>
                        <p class="timeline">
                            <i class="fas fa-clock"></i>
                            {businessPlan.timeline}
                        </p>
                        <a href={getRelativeLocaleUrl(locale, "/contact")}>
                            {t.contactUs}
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Process Section -->
        {
            process && (
                <section class="process">
                    <SectionTitle>{t.ourProcess}</SectionTitle>
                    <div class="process-timeline">
                        {process.map((step, index) => (
                            <div class="process-step" data-aos="fade-bottom">
                                <div class="step-number">{step.step}</div>
                                <div class="step-content">
                                    <h3>{step.title}</h3>
                                    <p>{step.description}</p>
                                </div>
                                {index < process.length - 1 && (
                                    <div class="step-connector" />
                                )}
                            </div>
                        ))}
                    </div>
                </section>
            )
        }

        <!-- Additional Services Section -->
        {
            additionalServices && (
                <section class="additional-services">
                    <SectionTitle>{t.additionalServices}</SectionTitle>
                    <div class="additional-services-grid" data-aos="fade-up">
                        {additionalServices.map((service) => (
                            <div class="additional-service-card">
                                <h3>{service.title}</h3>
                                <p>{service.description}</p>
                                <div class="service-price">{service.price}</div>
                                <a
                                    href={getRelativeLocaleUrl(
                                        locale,
                                        "/contact",
                                    )}
                                    class="service-link"
                                >
                                    {t.getQuote}
                                    <i class="fas fa-arrow-right" />
                                </a>
                            </div>
                        ))}
                    </div>
                </section>
            )
        }

        <!-- CTA Section -->
        <section class="cta">
            <div class="cta-content" data-aos="fade-up">
                <h2>{t.readyToGetStarted}</h2>
                <p>
                    {t.freeConsultation}
                </p>
                <div class="cta-buttons">
                    <a
                        href={getRelativeLocaleUrl(locale, "/contact")}
                        class="btn-primary">{t.startYourProject}</a
                    >
                    <a
                        href={getRelativeLocaleUrl(locale, "/about")}
                        class="btn-secondary">{t.whoWeAre}</a
                    >
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* --- Plans Section --- */
    .plans {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-12);
        padding: 0 var(--space-6);
        max-width: 1200px;
        margin: 0 auto;
    }

    .toggle-plans {
        position: relative;
        display: flex;
        justify-content: center;
        gap: var(--space-4);
        background: light-dark(rgba(0, 0, 0, 0.05), rgba(255, 255, 255, 0.05));
        border-radius: var(--radius-full);
        padding: var(--space-2) var(--space-3);
    }

    .toggle-plans button {
        z-index: 10;
        padding: var(--space-3) var(--space-8);
        background: transparent;
        width: 50%;
        color: light-dark(rgba(0, 0, 0, 0.6), rgba(255, 255, 255, 0.6));
        border: none;
        border-radius: var(--radius-full);
        font-size: var(--font-size-base);
        font-weight: var(--font-weight-medium);
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .toggle-plans button.active {
        color: var(--color-primary);
        background: linear-gradient(
            135deg,
            var(--accent-primary) 0%,
            var(--accent-secondary) 100%
        );
    }

    .plan-cards {
        display: flex;
        gap: var(--space-16);
        max-width: 1000px;
    }

    .plan-card {
        display: flex;
        flex-direction: column;
        width: calc(100% - 2 * var(--space-8));
        gap: var(--space-2);
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-2xl);
        padding: var(--space-8);
        transition: all 0.3s ease;
        opacity: 0.5;
    }
    .plan-card.active {
        opacity: 1;
        scale: 1.05;
        border-color: rgba(var(--accent-primary-rgb), 0.5);
        box-shadow: 0 20px 40px rgba(var(--accent-primary-rgb), 0.2);
    }
    .plan-card.active a {
        background: linear-gradient(
            135deg,
            var(--accent-primary) 0%,
            var(--accent-secondary) 100%
        );
        border: none;
    }
    .plan-card.active a:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }

    .card-header {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
    }
    .card-header h3 {
        font-size: var(--font-size-2xl);
        font-weight: var(--font-weight-bold);
        margin: 0;
    }
    .card-header .price {
        font-size: var(--font-size-4xl);
        font-weight: var(--font-weight-bold);
        background: linear-gradient(
            135deg,
            var(--accent-primary) 0%,
            light-dark(var(--accent-secondary), var(--accent-tertiary)) 100%
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .plan-card ul {
        list-style: none;
        padding: 0;
    }
    .plan-card ul li {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        color: light-dark(rgba(0, 0, 0, 0.9), rgba(255, 255, 255, 0.9));
    }
    .plan-card ul li i {
        color: var(--accent-primary);
        font-size: var(--font-size-sm);
    }

    .plan-card a {
        display: inline-flex;
        width: fit-content;
        justify-content: center;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-3) var(--space-6);
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid var(--color-tertiary);
        color: var(--color-primary);
        border-radius: var(--radius-full);
        text-decoration: none;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
    }
    .plan-card .timeline {
        margin: 0 0 var(--space-4);
        display: flex;
        align-items: center;
        gap: var(--space-2);
        color: light-dark(rgba(0, 0, 0, 0.7), rgba(255, 255, 255, 0.7));
        font-size: var(--font-size-sm);
    }

    /* Benefits Section */
    .benefits {
        padding: var(--space-16) var(--space-6);
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-8);
        max-width: 1200px;
        margin: 0 auto;
    }

    .benefit-card {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
        justify-content: center;
        align-items: center;
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-xl);
        padding: var(--space-8);
        text-align: center;
        transition: all 0.3s ease;
    }
    .benefit-card:hover {
        transform: translateY(-4px);
        border-color: rgba(var(--accent-primary-rgb), 0.5);
        box-shadow: 0 15px 30px rgba(var(--accent-primary-rgb), 0.2);
    }

    .benefit-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(
            135deg,
            var(--accent-primary) 0%,
            var(--accent-secondary) 100%
        );
        border-radius: var(--radius-full);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .benefit-icon i {
        font-size: var(--font-size-xl);
        color: light-dark(var(--color-secondary), var(--color-primary));
    }

    /* Process Section */
    .process {
        padding: var(--space-16) var(--space-6);
    }

    .process-timeline {
        max-width: 800px;
        margin: 0 auto;
    }

    .process-step {
        display: flex;
        align-items: flex-start;
        gap: var(--space-6);
        position: relative;
        margin-bottom: var(--space-12);
    }

    .step-number {
        width: 50px;
        height: 50px;
        background: linear-gradient(
            135deg,
            var(--accent-primary) 0%,
            var(--accent-secondary) 100%
        );
        border-radius: var(--radius-full);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-bold);
        color: light-dark(var(--color-secondary), var(--color-primary));
        flex-shrink: 0;
    }

    .step-connector {
        position: absolute;
        left: 25px;
        top: 50px;
        width: 2px;
        height: calc(100% + var(--space-12));
        background: linear-gradient(
            180deg,
            var(--accent-primary) 0%,
            transparent 100%
        );
    }

    .step-content h3 {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-semibold);
        margin-bottom: var(--space-2);
    }

    /* Additional Services Section */
    .additional-services {
        padding: var(--space-16) var(--space-6);
    }

    .additional-services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: var(--space-6);
        max-width: 1200px;
        margin: 0 auto;
    }

    .additional-service-card {
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-2xl);
        padding: var(--space-6);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
    }

    .additional-service-card:hover {
        transform: translateY(-4px);
        border-color: rgba(var(--accent-primary-rgb), 0.3);
        box-shadow: 0 8px 25px rgba(var(--accent-primary-rgb), 0.15);
    }

    .additional-service-card h3 {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-semibold);
        color: var(--color-primary);
        margin-bottom: var(--space-2);
    }

    .additional-service-card p {
        color: light-dark(rgba(0, 0, 0, 0.8), rgba(255, 255, 255, 0.8));
        line-height: 1.6;
        flex-grow: 1;
    }

    .service-price {
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-semibold);
        color: var(--accent-primary);
        margin: var(--space-2) 0;
    }

    .service-link {
        display: flex;
        align-items: center;
        gap: var(--space-2);
        color: var(--accent-primary);
        text-decoration: none;
        font-weight: var(--font-weight-medium);
        transition: all 0.3s ease;
        width: fit-content;
    }

    .service-link:hover {
        color: var(--color-primary);
        transform: translateX(4px);
    }

    .service-link i {
        transition: transform 0.3s ease;
    }

    .service-link:hover i {
        transform: translateX(4px);
    }

    /* CTA Section */
    .cta {
        padding: var(--space-16) var(--space-6);
        text-align: center;
    }

    .cta-content h2 {
        font-size: var(--font-size-4xl);
        font-weight: var(--font-weight-bold);
        margin-bottom: var(--space-4);
    }

    .cta-content p {
        font-size: var(--font-size-xl);
        color: light-dark(rgba(0, 0, 0, 0.8), rgba(255, 255, 255, 0.8));
        margin-bottom: var(--space-8);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-buttons {
        display: flex;
        gap: var(--space-4);
        justify-content: center;
    }

    /* Buttons */
    .btn-primary,
    .btn-secondary,
    .btn-plan {
        padding: var(--space-4) var(--space-8);
        border-radius: var(--radius-full);
        font-size: var(--font-size-base);
        font-weight: var(--font-weight-medium);
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary,
    .btn-plan.featured {
        background: linear-gradient(
            135deg,
            var(--accent-primary) 0%,
            var(--accent-secondary) 100%
        );
        color: var(--color-primary);
        box-shadow: 0 4px 15px rgba(var(--accent-primary-rgb), 0.3);
    }

    .btn-primary:hover,
    .btn-plan.featured:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(var(--accent-primary-rgb), 0.4);
    }

    .btn-secondary,
    .btn-plan {
        color: var(--color-primary);
        border: 1px solid var(--color-tertiary);
    }

    .btn-secondary:hover,
    .btn-plan:hover {
        background: rgba(var(--accent-primary-rgb), 0.1);
        border-color: var(--accent-primary);
        transform: translateY(-2px);
    }

    /* Mobile Responsive */
    @media (max-width: 768px) {
        .benefits-grid {
            grid-template-columns: 1fr;
            gap: var(--space-6);
        }

        .plan-cards {
            flex-direction: column;
            align-items: center;
        }

        .plan-card {
            display: none;
        }
        .plan-card.active {
            display: flex;
            scale: 1;
        }

        .process-step {
            flex-direction: column;
            text-align: center;
            gap: var(--space-4);
        }
        .process-step .step-number {
            margin: auto;
        }

        .step-connector {
            display: none;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }
    }
</style>

<script>
    document
        .getElementById("individualPlansToggle")
        .addEventListener("click", function () {
            document
                .getElementById("individualPlanCard")
                .classList.add("active");
            document
                .getElementById("businessPlanCard")
                .classList.remove("active");
            this.classList.add("active");
            document
                .getElementById("businessPlansToggle")
                .classList.remove("active");
        });

    document
        .getElementById("businessPlansToggle")
        .addEventListener("click", function () {
            document.getElementById("businessPlanCard").classList.add("active");
            document
                .getElementById("individualPlanCard")
                .classList.remove("active");
            this.classList.add("active");
            document
                .getElementById("individualPlansToggle")
                .classList.remove("active");
        });
</script>
