    // Website Development
    {
        title: "Webseitenentwicklung",
        description:
            "Wir entwerfen und entwickeln schnelle, responsive und visuell ansprechende Webseiten, die auf Ihre Marke, Zielgruppe und Geschäftsziele zugeschnitten sind.",
        image: websiteDevelopment,
        features: [
            "Maßgeschneidertes Design & UX",
            "Mobile-First-Entwicklung",
            "Performance-Optimierung",
            "CMS-Integration",
        ],
        url: "/services/website-development",
    },

