---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/Button.astro";
---

<Layout title="404 - VXIT.IO">
    <main>
        <div class="error-container">
            <div class="error-animation">
                <div class="glitch-number" data-text="404">404</div>
                <div class="floating-shapes">
                    <div class="shape shape-1"></div>
                    <div class="shape shape-2"></div>
                    <div class="shape shape-3"></div>
                    <div class="shape shape-4"></div>
                </div>
            </div>

            <div class="error-content">
                <h1>Page Not Found</h1>
                <p>
                    Oops! The page you're looking for seems to have wandered off
                    into the digital void. Don't worry, we'll help you find your
                    way back.
                </p>

                <div class="error-actions">
                    <a href="/en" class="btn-primary">
                        <i class="fa-solid fa-home"></i>
                        Back to Home
                    </a>
                    <a href="/en/contact" class="btn-secondary">
                        <i class="fa-solid fa-envelope"></i>
                        Contact Us
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    main {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-8);
    }

    .error-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-16);
        max-width: 1200px;
        width: 100%;
        align-items: center;
    }

    /* Error Animation Section */
    .error-animation {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 400px;
    }

    .glitch-number {
        font-size: 12rem;
        font-weight: var(--font-weight-extrabold);
        background: linear-gradient(
            45deg,
            var(--accent-primary),
            var(--accent-secondary),
            var(--accent-tertiary)
        );
        background-size: 300% 300%;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        animation:
            gradient-shift 3s ease-in-out infinite,
            glitch 2s infinite;
        position: relative;
        text-shadow:
            0 0 30px rgba(var(--accent-primary-rgb), 0.5),
            0 0 60px rgba(var(--accent-primary-rgb), 0.3);
    }

    .glitch-number::before,
    .glitch-number::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        background: linear-gradient(
            45deg,
            var(--accent-primary),
            var(--accent-secondary)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
        opacity: 0.8;
    }

    .glitch-number::before {
        animation: glitch-1 2s infinite;
        z-index: -1;
    }

    .glitch-number::after {
        animation: glitch-2 2s infinite;
        z-index: -2;
    }

    @keyframes gradient-shift {
        0%,
        100% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
    }

    @keyframes glitch {
        0%,
        100% {
            transform: translate(0);
        }
        20% {
            transform: translate(-2px, 2px);
        }
        40% {
            transform: translate(-2px, -2px);
        }
        60% {
            transform: translate(2px, 2px);
        }
        80% {
            transform: translate(2px, -2px);
        }
    }

    @keyframes glitch-1 {
        0%,
        100% {
            transform: translate(0);
        }
        20% {
            transform: translate(-3px, 3px);
        }
        40% {
            transform: translate(-3px, -3px);
        }
        60% {
            transform: translate(3px, 3px);
        }
        80% {
            transform: translate(3px, -3px);
        }
    }

    @keyframes glitch-2 {
        0%,
        100% {
            transform: translate(0);
        }
        20% {
            transform: translate(3px, -3px);
        }
        40% {
            transform: translate(3px, 3px);
        }
        60% {
            transform: translate(-3px, -3px);
        }
        80% {
            transform: translate(-3px, 3px);
        }
    }

    /* Floating Shapes */
    .floating-shapes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .shape {
        position: absolute;
        border-radius: 50%;
        opacity: 0.1;
        animation: float 6s ease-in-out infinite;
    }

    .shape-1 {
        width: 80px;
        height: 80px;
        background: var(--accent-primary);
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }

    .shape-2 {
        width: 60px;
        height: 60px;
        background: var(--accent-secondary);
        top: 60%;
        right: 10%;
        animation-delay: 1s;
    }

    .shape-3 {
        width: 100px;
        height: 100px;
        background: var(--accent-tertiary);
        bottom: 10%;
        left: 20%;
        animation-delay: 2s;
    }

    .shape-4 {
        width: 40px;
        height: 40px;
        background: var(--accent-primary);
        top: 10%;
        right: 30%;
        animation-delay: 3s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }
        33% {
            transform: translateY(-20px) rotate(120deg);
        }
        66% {
            transform: translateY(10px) rotate(240deg);
        }
    }

    /* Error Content Section */
    .error-content {
        display: flex;
        flex-direction: column;
        gap: var(--space-6);
    }

    .error-content h1 {
        font-size: var(--font-size-5xl);
        font-weight: var(--font-weight-bold);
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            light-dark(var(--accent-secondary), var(--color-primary))
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: var(--space-4);
    }

    .error-content p {
        font-size: var(--font-size-xl);
        line-height: var(--line-height-relaxed);
        color: var(--color-primary);
        opacity: 0.9;
    }

    .error-actions {
        display: flex;
        gap: var(--space-4);
        margin: var(--space-6) 0;
        flex-wrap: wrap;
    }

    .btn-primary,
    .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: var(--space-2);
        padding: var(--space-4) var(--space-8);
        border-radius: var(--radius-full);
        text-decoration: none;
        font-weight: var(--font-weight-semibold);
        font-size: var(--font-size-lg);
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            var(--accent-secondary)
        );
        color: light-dark(var(--color-secondary), var(--color-primary));
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(var(--accent-primary-rgb), 0.3);
    }

    .btn-secondary {
        background: transparent;
        color: var(--color-primary);
        border: 1px solid var(--color-tertiary);
    }

    .btn-secondary:hover {
        border-color: var(--accent-primary);
        background: rgba(var(--accent-primary-rgb), 0.1);
        transform: translateY(-2px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .error-container {
            grid-template-columns: 1fr;
            gap: var(--space-8);
            text-align: center;
        }

        .glitch-number {
            font-size: 8rem;
        }

        .error-content h1 {
            font-size: var(--font-size-4xl);
        }

        .error-content p {
            font-size: var(--font-size-lg);
        }

        .error-actions {
            justify-content: center;
        }

        .helpful-links {
            text-align: left;
        }

        .helpful-links li a:hover {
            transform: translateX(4px);
        }
    }

    @media (max-width: 480px) {
        .error-animation {
            min-height: 200px;
        }

        .glitch-number {
            font-size: 6rem;
        }

        .error-actions {
            flex-direction: column;
            align-items: center;
        }

        .btn-primary,
        .btn-secondary {
            width: 100%;
            justify-content: center;
            max-width: 275px;
        }
    }
</style>
