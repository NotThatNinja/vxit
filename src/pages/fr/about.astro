<style>
    main {
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 var(--space-6);
    }

    /* Story Section */
    .story {
        padding: var(--space-16) 0;
    }

    .story-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: var(--space-12);
        align-items: start;
    }

    .story-text {
        display: flex;
        flex-direction: column;
        gap: var(--space-6);
    }

    .story-text p {
        font-size: var(--font-size-lg);
        line-height: var(--line-height-relaxed);
        color: var(--color-primary);
    }

    .story-stats {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-6);
    }

    .stat {
        text-align: center;
        padding: var(--space-6);
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-xl);
        transition: all 0.3s ease;
    }

    .stat:hover {
        border: 1px solid var(--accent-primary);
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(var(--accent-primary-rgb), 0.15);
    }

    .stat-number {
        font-size: var(--font-size-4xl);
        font-weight: var(--font-weight-bold);
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            light-dark(var(--accent-secondary), var(--accent-secondary))
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: var(--space-2);
    }

    .stat-label {
        font-size: var(--font-size-sm);
        color: var(--color-primary);
        font-weight: var(--font-weight-medium);
    }

    /* Mission & Vision Section */
    .mission-vision {
        padding: var(--space-16) 0;
    }

    .mission-vision-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--space-8);
    }

    .mission-card,
    .vision-card {
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-2xl);
        padding: var(--space-8);
        text-align: center;
        transition: all 0.3s ease !important;
    }

    .mission-card:hover,
    .vision-card:hover {
        transform: translateY(-6px);
        border-color: var(--accent-primary);
        box-shadow: 0 12px 30px rgba(var(--accent-primary-rgb), 0.2);
    }

    .card-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            var(--accent-secondary)
        );
        border-radius: var(--radius-full);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto var(--space-6) auto;
    }

    .card-icon i {
        font-size: var(--font-size-3xl);
        color: light-dark(var(--color-secondary), var(--color-primary));
    }

    .mission-card h3,
    .vision-card h3 {
        font-size: var(--font-size-3xl);
        font-weight: var(--font-weight-bold);
        margin-bottom: var(--space-4);
        color: var(--color-primary);
    }

    .mission-card p,
    .vision-card p {
        font-size: var(--font-size-lg);
        line-height: var(--line-height-relaxed);
        color: var(--color-primary);
    }

    /* Values Section */
    .values {
        padding: var(--space-16) 0;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: var(--space-6);
        margin-top: var(--space-8);
    }

    .value-card {
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-xl);
        padding: var(--space-6);
        text-align: center;
        transition: all 0.3s ease !important;
    }

    .value-card:hover {
        transform: translateY(-4px);
        border-color: var(--accent-primary);
        box-shadow: 0 8px 25px rgba(var(--accent-primary-rgb), 0.15);
    }

    .value-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            var(--accent-secondary)
        );
        border-radius: var(--radius-full);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto var(--space-4) auto;
    }

    .value-icon i {
        font-size: var(--font-size-xl);
        color: light-dark(var(--color-secondary), var(--color-primary));
    }

    .value-card h4 {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-semibold);
        margin-bottom: var(--space-3);
        color: var(--color-primary);
    }

    .value-card p {
        font-size: var(--font-size-base);
        line-height: var(--line-height-relaxed);
        color: var(--color-primary);
    }

    /* Team Section */
    .team {
        padding: var(--space-16) 0;
        background: linear-gradient(
            135deg,
            rgba(var(--accent-secondary-rgb, 64, 0, 255), 0.05) 0%,
            rgba(0, 0, 0, 0.8) 100%
        );
    }

    .team-intro {
        text-align: center;
        font-size: var(--font-size-lg);
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: var(--space-12);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .team-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--space-8);
    }

    .team-member {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-2xl);
        padding: var(--space-8);
        text-align: center;
        transition: all 0.3s ease;
    }

    .team-member:hover {
        transform: translateY(-6px);
        border-color: rgba(var(--accent-primary-rgb), 0.3);
        box-shadow: 0 12px 30px rgba(var(--accent-primary-rgb), 0.2);
    }

    .member-avatar {
        width: 100px;
        height: 100px;
        background: linear-gradient(
            135deg,
            var(--accent-primary),
            var(--accent-tertiary)
        );
        border-radius: var(--radius-full);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto var(--space-6) auto;
    }

    .member-avatar i {
        font-size: var(--font-size-4xl);
        color: var(--color-primary);
    }

    .team-member h4 {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-semibold);
        margin-bottom: var(--space-2);
        color: var(--color-primary);
    }

    .member-role {
        font-size: var(--font-size-base);
        color: var(--accent-primary);
        font-weight: var(--font-weight-medium);
        margin-bottom: var(--space-4);
    }

    .member-bio {
        font-size: var(--font-size-sm);
        line-height: var(--line-height-relaxed);
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: var(--space-6);
    }

    .member-social {
        display: flex;
        justify-content: center;
        gap: var(--space-4);
    }

    .member-social a {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: var(--radius-full);
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .member-social a:hover {
        background: var(--accent-primary);
        color: var(--color-primary);
        transform: translateY(-2px);
    }

    /* Why Choose Us Section */
    .why-choose-us {
        padding: var(--space-16) 0;
    }

    .reasons-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--space-8);
        margin-top: var(--space-8);
    }

    .reason-card {
        border: 1px solid var(--color-tertiary);
        border-radius: var(--radius-xl);
        padding: var(--space-8);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .reason-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(
            90deg,
            var(--accent-primary),
            light-dark(var(--accent-secondary), var(--accent-tertiary))
        );
        transform: scaleX(0);
        transition: transform 0.3s ease !important;
    }

    .reason-card:hover::before {
        transform: scaleX(1);
    }

    .reason-card:hover {
        transform: translateY(-4px);
        border-color: rgba(var(--accent-primary-rgb), 0.3);
