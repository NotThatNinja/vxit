---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/Hero.astro";
import SectionTitle from "../components/SectionTitle.astro";

import { Image } from "astro:assets";
import websiteDevelopment from "../assets/services/website-development.jpg";
import aiIntegration from "../assets/services/ai-integration.jpg";
import seoOptimization from "../assets/services/seo-optimization.jpg";
import ecommerceSolutions from "../assets/services/ecommerce-solutions.jpg";

const services = [
    {
        title: "Website Development",
        description: "Custom websites tailored to your business needs.",
        image: websiteDevelopment,
    },
    {
        title: "AI Integration",
        description: "Integrate AI solutions into your websites.",
        image: aiIntegration,
    },
    {
        title: "Ecommerce Solutions",
        description:
            "Comprehensive ecommerce solutions to grow your online store.",
        image: ecommerceSolutions,
    },
    {
        title: "SEO Optimization",
        description: "Boost your online presence with our SEO services.",
        image: seoOptimization,
    },
];

const faq = [
    {
        question:
            "What makes VXIT different from other web development agencies?",
        answer: "VXIT specializes in creating high-performance, custom websites with cutting-edge AI integration. We focus on delivering sleek designs that drive real business growth, not just pretty websites.",
    },
    {
        question: "How long does a typical project take?",
        answer: "Project timelines vary based on complexity. A standard website takes 2-4 weeks, while custom AI integrations or complex ecommerce solutions may take 6-8 weeks. We'll provide a detailed timeline during consultation.",
    },
    {
        question: "Do you provide ongoing support and maintenance?",
        answer: "Absolutely! We offer comprehensive post-launch support including updates, security monitoring, performance optimization, and technical assistance to ensure your site continues to perform at its best.",
    },
    {
        question: "What's included in your AI integration services?",
        answer: "Our AI integration services include chatbots, automated content generation, personalized user experiences, predictive analytics, and custom AI tools tailored to your business needs.",
    },
    {
        question: "Can you help improve my existing website's performance?",
        answer: "Yes! We offer website audits, performance optimization, SEO improvements, and modernization services to transform your existing site into a high-performing digital asset.",
    },
    {
        question: "What's your pricing structure?",
        answer: "We offer flexible pricing based on project scope and requirements. Contact us for a free consultation where we'll provide a detailed quote tailored to your specific needs and budget.",
    },
];
---

<Layout title="Home - VXIT">
    <main>
        <Hero
            title="Creative Excellence"
            subtitle="VXIT engineers sleek, high-performing sites that drive growth. We handle the tech, so you can focus on your success."
