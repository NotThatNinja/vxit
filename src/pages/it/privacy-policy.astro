<style>
    main {
        padding: var(--space-16) var(--space-8) 0;
    }

    .privacy-policy {
        max-width: 800px;
        margin: 0 auto;
    }

    .subtitle {
        margin-top: -1.5rem;
        margin-bottom: var(--space-8);
        text-align: center;
    }

    h3 {
        font-size: var(--font-size-2xl);
        margin-top: var(--space-8);
        margin-bottom: var(--space-2);
    }
</style>
