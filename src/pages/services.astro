---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";

import { Image } from "astro:assets";
import websiteDevelopment from "../assets/services/website-development.jpg";
import aiIntegration from "../assets/services/ai-integration.jpg";
import seoOptimization from "../assets/services/seo-optimization.jpg";
import ecommerceSolutions from "../assets/services/ecommerce-solutions.jpg";

const services = [
    // Website Development
    {
        title: "Website Development",
        description:
            "We design and build fast, responsive, and visually striking websites tailored to your brand, audience, and business goals.",
        image: websiteDevelopment,
        features: [
            "Custom design & UX",
            "Mobile-first development",
            "Performance optimization",
            "CMS integration (WordPress, headless, etc.)",
        ],
    },

    // AI Integration
    {
        title: "AI Integration",
        description:
            "Bring intelligent features to your platform with seamless AI integration â€” from chatbots and automation to data analysis and personalization.",
        image: aiIntegration,
        features: [
            "AI-powered chatbots",
            "Data processing & analytics",
            "Personalized user experiences",
            "API & third-party AI tools integration",
        ],
    },

    // Ecommerce Solutions
    {
        title: "Ecommerce Solutions",
        description:
            "We build scalable ecommerce platforms optimized for conversions, user experience, and seamless inventory/payment integrations.",
        image: ecommerceSolutions,
        features: [
            "Custom storefronts",
            "Secure payment integration",
            "Product management tools",
            "Sales & analytics dashboards",
        ],
    },

    // SEO Optimization
    {
        title: "SEO Optimization",
        description:
            "Enhance your visibility on search engines with proven SEO strategies, technical audits, content optimization, and performance improvements.",
        image: seoOptimization,
        features: [
            "Technical SEO audits",
            "Keyword research",
            "On-page optimization",
            "Performance & Core Web Vitals tuning",
        ],
    },
];
---

<Layout title="Services - VXIT">
    <main>
        <Hero
            title="Our Services"
            subtitle="Discover the range of services we offer to elevate your business."
        />
        <section>
            <div class="categories">
                <Button type="button" id="individualsButton">
                    Individuals
                    <i class="fa-solid fa-house"></i>
                </Button>
                <Button class="active" id="businessesButton">
                    Businesses
                    <i class="fa-solid fa-building"></i>
                </Button>
            </div>
            <div class="services">
                <div class="business-services">
                    {
                        services.map((service, i) => (
                            <div
                                class="service-card"
                                data-aos={
                                    i % 2 === 0 ? "fade-left" : "fade-right"
                                }
                            >
                                <div class="service-info">
                                    <h3>{service.title}</h3>
                                    <p>{service.description}</p>
                                    <ul>
                                        {service.features.map((feature) => (
                                            <li>{feature}</li>
                                        ))}
                                    </ul>
                                    <a class="button" href="/vxit/contact">
                                        Learn More
                                        <i class="fa-solid fa-arrow-right" />
                                    </a>
                                </div>
                                <Image
                                    src={service.image}
                                    alt={service.title}
                                />
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .categories {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: var(--space-12);
        margin-bottom: var(--space-8);
    }

    .services {
        display: grid;
        width: 100%;
        overflow-x: hidden;
    }
    .business-services,
    .individual-services {
        grid-area: 1 / 1;
        display: flex;
        flex-direction: column;
        transition: transform 0.4s ease;
    }
    .individual-services {
        transform: translateX(-100%);
    }

    .service-card {
        display: flex;
        gap: var(--space-8);
        justify-content: center;
        align-items: center;
        padding: var(--space-8);
        background: radial-gradient(
            circle at center,
            rgba(var(--color-accent-rgb), 0.15) 0%,
            rgba(var(--color-accent-rgb), 0.1) 30%,
            rgba(var(--color-accent-rgb), 0.05) 60%,
            transparent 100%
        );
    }
    .service-card:nth-child(odd) {
        flex-direction: row-reverse;
    }
    .service-card img {
        width: 33%;
        height: 75%;
        object-fit: cover;
        padding: var(--space-8);
        border-radius: 3rem;
    }
    .service-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: var(--space-4);
        width: 66%;
    }
    .service-info h3 {
        font-size: var(--font-size-5xl);
        background: linear-gradient(
            to bottom,
            var(--color-accent),
            var(--color-white)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .service-info p {
        font-size: var(--font-size-xl);
    }
    .service-info ul {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
    }
    .service-info ul li {
        padding-left: var(--space-6);
        font-size: var(--font-size-lg);
    }
    .button {
        display: flex;
        width: fit-content;
        gap: var(--space-2);
        justify-content: center;
        align-items: center;
        text-decoration: none;
        color: var(--color-white);
        border: 1px solid var(--color-gray);
        border-radius: var(--radius-full);
        padding: var(--space-4) var(--space-8);
        transition:
            border 0.3s ease,
            background 0.3s ease;
    }
    .button:hover {
        border-color: var(--color-accent);
        background: rgba(var(--color-accent-rgb), 0.2);
    }

    @media (max-width: 768px) {
        .categories {
            gap: 0;
            justify-content: space-evenly;
        }

        .service-card {
            flex-direction: column;
        }
        .service-info {
            width: auto;
        }
        .service-card img {
            width: 100%;
        }
    }
</style>

<script>
    const individualsButton = document.getElementById("individualsButton");
    const businessesButton = document.getElementById("businessesButton");
    const businessServices = document.querySelector(".business-services");
    const individualServices = document.querySelector(".individual-services");

    individualsButton?.addEventListener("click", () => {
        switchView(false);
    });
    businessesButton?.addEventListener("click", () => {
        switchView(true);
    });

    function switchView(business = true) {
        if (business) {
            businessesButton?.classList.add("active");
            individualsButton?.classList.remove("active");

            businessServices.style.transform = "translateX(0)";
            individualServices.style.transform = "translateX(-100%)";
        } else {
            individualsButton?.classList.add("active");
            businessesButton?.classList.remove("active");

            businessServices.style.transform = "translateX(100%)";
            individualServices.style.transform = "translateX(0)";
        }
    }
</script>
