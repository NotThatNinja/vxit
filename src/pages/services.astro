---
import Layout from "../layouts/Layout.astro";

import Hero from "../components/Hero.astro";
import SectionTitle from "../components/SectionTitle.astro";

import { Image } from "astro:assets";
import websiteDevelopment from "../assets/services/website-development.jpg";
import aiIntegration from "../assets/services/ai-integration.jpg";
import seoOptimization from "../assets/services/seo-optimization.jpg";
import ecommerceSolutions from "../assets/services/ecommerce-solutions.jpg";

const services = [
    {
        title: "Website Development",
        description:
            "We design and build fast, responsive, and visually striking websites tailored to your brand, audience, and business goals.",
        image: websiteDevelopment,
        features: [
            "Custom design & UX",
            "Mobile-first development",
            "Performance optimization",
            "CMS integration (WordPress, headless, etc.)",
        ],
        tags: ["Frontend", "Responsive", "Performance", "UX"],
    },
    {
        title: "AI Integration",
        description:
            "Bring intelligent features to your platform with seamless AI integration â€” from chatbots and automation to data analysis and personalization.",
        image: aiIntegration,
        features: [
            "AI-powered chatbots",
            "Data processing & analytics",
            "Personalized user experiences",
            "API & third-party AI tools integration",
        ],
        tags: ["AI", "Automation", "Chatbots", "Machine Learning"],
    },
    {
        title: "Ecommerce Solutions",
        description:
            "We build scalable ecommerce platforms optimized for conversions, user experience, and seamless inventory/payment integrations.",
        image: ecommerceSolutions,
        features: [
            "Custom storefronts",
            "Secure payment integration",
            "Product management tools",
            "Sales & analytics dashboards",
        ],
        tags: ["Ecommerce", "Shopify", "Payments", "Product Management"],
    },
    {
        title: "SEO Optimization",
        description:
            "Enhance your visibility on search engines with proven SEO strategies, technical audits, content optimization, and performance improvements.",
        image: seoOptimization,
        features: [
            "Technical SEO audits",
            "Keyword research",
            "On-page optimization",
            "Performance & Core Web Vitals tuning",
        ],
        tags: ["SEO", "Performance", "Traffic", "Growth"],
    },
];
---

<Layout title="Home - VXIT">
    <main>
        <Hero
            title="Our Services"
            subtitle="Discover the range of services we offer to elevate your business."
        />
        <section>
            <div class="categories">
                <button type="button">
                    Individuals
                    <i class="fa-solid fa-house"></i>
                </button>
                <button type="button" class="active">
                    Businesses
                    <i class="fa-solid fa-building"></i>
                </button>
            </div>
            <div class="services">
                {
                    services.map((service) => (
                        <div class="service-card">
                            <div class="service-info">
                                <h3>{service.title}</h3>
                                <p>{service.description}</p>
                                <ul>
                                    {service.features.map((feature) => (
                                        <li>{feature}</li>
                                    ))}
                                </ul>
                            </div>
                            <Image src={service.image} alt={service.title} />
                        </div>
                    ))
                }
            </div>
        </section>
    </main>
</Layout>

<style>
    .categories {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: var(--space-12);
        margin-bottom: var(--space-8);
    }
    .categories button {
        display: flex;
        gap: var(--space-2);
        justify-content: center;
        align-items: center;
        padding: var(--space-4) var(--space-8);
        background: var(--color-black);
        border: 1px solid var(--color-gray);
        border-radius: var(--radius-full);
        font-size: var(--font-size-xl);
        color: var(--color-white);
        cursor: pointer;
        transition: border 0.3s ease;
    }
    .categories button:hover {
        border-color: var(--color-accent);
    }
    .categories button.active {
        border-color: var(--color-accent);
        background: rgba(var(--color-accent-rgb), 0.2);
    }

    .service-card {
        display: flex;
        gap: var(--space-8);
        justify-content: center;
        align-items: center;
        padding: var(--space-8);
        border-top: 1px solid var(--color-gray);
        border-bottom: 1px solid var(--color-gray);
    }
    .service-card img {
        width: 50%;
        height: 100%;
        object-fit: cover;
        padding: var(--space-8);
        border-radius: 3rem;
    }
    .service-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: var(--space-4);
        width: 50%;
    }
    .service-info h3 {
        font-size: var(--font-size-5xl);
        background: linear-gradient(
            to bottom,
            var(--color-accent),
            var(--color-white)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .service-info p {
        font-size: var(--font-size-xl);
    }
    .service-info ul {
        display: flex;
        flex-direction: column;
        gap: var(--space-4);
    }
    .service-info ul li {
        padding-left: var(--space-6);
        font-size: var(--font-size-lg);
    }
</style>
